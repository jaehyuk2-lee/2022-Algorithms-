//2022-12-20 code 6.2 to C
//n개의 원소중 m개를 고르는 모든 경우의 출력 ~> 조합

#include <stdio.h>

void Comb(int A, int B, int C){
    //A: 원소개수, B: 남은 반복 수, C: 고르는 원소개수
    int ary[A]:
    for(int i=0; i<A; i++){
        ary[i]=i;
    }//배열 설정
    
    int a[A];
    
    if(B==0){
        for(int i=0; i<C; i++){
            printf("%d ",a[i]);
        }
        printf("\n");
    }
    else if (A<B){
        printf("수열보다 넓은 범위\n");
    }
    else{
        a[A-1]=ary[A-1];//하나 선택 후 남은 것 중에 하나 선택
        Comb(A-1,B-1,C);
        Comb(A-1,B,C);
    }
}

int main()
{
    int n;
    printf("크기 입력: ");
    scanf("%d", &n);
    //전체 크기 설정
    
    int m;
    printf("출력 범위 입력: ");
    scanf("%d", &m);
    //출력 범위 설정
    
    Comb(n,m,m);
    
    return 0;
}
